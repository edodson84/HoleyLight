<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_layout"
    tools:context=".ui.TuneActivity">
    
    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/tune_notice"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnAddScaleBaseMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toBottomOf="@id/tvNotice"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvAddScaleBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAddScaleBaseMinus" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnAddScaleBasePlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginEnd="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toTopOf="@id/btnAddScaleBaseMinus"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnAddScaleHorizontalMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toBottomOf="@id/btnAddScaleBaseMinus"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvAddScaleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAddScaleHorizontalMinus" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnAddScaleHorizontalPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginEnd="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toTopOf="@id/btnAddScaleHorizontalMinus"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnShiftVerticalMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toBottomOf="@id/btnAddScaleHorizontalMinus"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvShiftVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnShiftVerticalMinus" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnShiftVerticalPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginEnd="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toTopOf="@id/btnShiftVerticalMinus"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnShiftHorizontalMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toBottomOf="@id/btnShiftVerticalMinus"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvShiftHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnShiftHorizontalMinus" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnShiftHorizontalPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginEnd="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toTopOf="@id/btnShiftHorizontalMinus"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnAddThicknessMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toBottomOf="@id/btnShiftHorizontalMinus"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvAddThickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAddThicknessMinus" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnAddThicknessPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginEnd="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toTopOf="@id/btnAddThicknessMinus"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnSpeedMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toBottomOf="@id/btnAddThicknessMinus"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnSpeedMinus" />

    <Button
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/btnSpeedPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginEnd="16dp"
        android:onClick="btnClick"
        app:layout_constraintTop_toTopOf="@id/btnSpeedMinus"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>